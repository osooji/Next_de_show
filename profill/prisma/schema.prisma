generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model signUp {
  id   Int    @id @default(autoincrement())
  ID   String @unique
  name String
  race String
  sex  String
}

